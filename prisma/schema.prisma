generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model users {
    id        Int         @id @default(autoincrement())
    email     String      @unique
    name      String
    avatar    String
    password  String
    books     books[]
    booksCart booksCart[]
    history   history[]
}

enum BookStatus {
    AVAILABLE
    UNAVAILABLE
}

model books {
    id          Int         @id @default(autoincrement())
    name        String
    image       String
    pages       Int
    year        Int
    description String
    edition     Int
    price       Int
    status      BookStatus
    user        users       @relation(fields: [userId], references: [id])
    userId      Int
    booksCart   booksCart[]
    history     history[]
}

model booksCart {
    id     Int   @id @default(autoincrement())
    user   users @relation(fields: [userId], references: [id])
    userId Int
    book   books @relation(fields: [bookId], references: [id])
    bookId Int
}

model history {
    id     Int   @id @default(autoincrement())
    user   users @relation(fields: [userId], references: [id])
    userId Int
    book   books @relation(fields: [bookId], references: [id])
    bookId Int
}
